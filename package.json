{
  "name": "universal-app",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "start": "run-p compile server",
    "build": "rm -rf dist/* && NODE_ENV=production webpack",
    "compile": "webpack -w",
    "server": "node dist/server/index.js",
    "test": "npm run -s lint && npm run -s test:coverage",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch --notify",
    "lint": "eslint src test"
  },
  "repository": "git+https://github.com/charlier/universal-app.git",
  "keywords": [
    "universal-app"
  ],
  "author": "Charlie Rogers <charlierogers@domain.name>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charlier/universal-app/issues"
  },
  "homepage": "https://github.com/charlier/universal-app#readme",
  "jest": {
    "snapshotSerializers": [
      "preact-render-spy/snapshot"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupFiles": [
      "./test/setupJest.js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(png|bmp|ico|svg)$": "<rootDir>/test/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "testMatch": [
      "**/test/*/**.js"
    ],
    "collectCoverageFrom": [
      "src/*/**.js"
    ]
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "express": "^4.16.3",
    "isomorphic-unfetch": "^2.0.0",
    "nodemon": "^1.17.3",
    "path-to-regexp": "^2.2.1",
    "preact": "^8.2.9",
    "preact-helmet": "^4.0.0-alpha-3",
    "preact-render-to-string": "^3.7.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "chunk-manifest-webpack-plugin": "github:malectro/chunk-manifest-webpack-plugin#webpack-4",
    "eslint": "^4.19.1",
    "eslint-config-iplayer-jsx": "^4.0.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-react": "^7.7.0",
    "history": "^4.7.2",
    "jest": "^22.4.3",
    "jest-fetch-mock": "^1.5.0",
    "npm-run-all": "^4.1.2",
    "preact-context-provider": "^1.1.1",
    "preact-render-spy": "^1.2.2",
    "source-map-loader": "^0.2.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
