{
  "parser": "babel-eslint",
  "plugins": ["react", "jest"],
  "extends": ["iplayer-jsx/react"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
        "pragma": "h"
    }
  },
  "rules": {
    "react/jsx-filename-extension": 0,
    "react/jsx-no-bind": [
      2,
      {
        "allowArrowFunctions": true
      }
    ],
    "func-style": [
      2,
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ]
  }
}
